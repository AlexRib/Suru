while [ $m!=4 ]
do

echo "1) Crear Un Usuario "
echo "2) Modificar Un Usuario "
echo "3) Eliminar o Suspender un Usuario "
echo "4) Salir "
read m
case $m in

1)clear
echo "Ingrese Usuario a Crear "
read Usuario
Usuario=$(grep $Usuario /etc/passwd)
if [ "$Usuario1"  =="" ]
then
useradd -d /home/$Usuario -m -s /bin/bash Usuario
echo "Usuario Creado"
else
echo "El nombre de usuario ya existe "
fi
// le agregamos un grupo a los usuarios? y pass
;;
2)clear
echo "Ingrese Usuario a Modificar "
read Usuario
Usuario=$(grep $Usuario /etc/passwd)
if [ "$usuario2" =="" ]
then
echo "El Usuario No Existe "
else

3)clear
echo "Ingrese Usuario a Bloquear "
read Usuario
Usuario=$(grep $Usuario /etc/passwd)
if  [ "$usuario3" =="" ]
then
echo "No Existe El Usuario "
else
usermod -L $Usuario
echo "El usuario a sido bloqueado "
fi
;;
